datasource db {
  provider = "postgres"
  url      = "postgresql://root:prisma2020@localhost:5403/prisma" 
}

generator client {
  previewFeatures = ["nativeTypes"]
  provider        = "prisma-client-js"
}

model SomeData {
  id        String    @id
  required Boolean
  number   Int     @db.SmallInt
}

model Member {
  id String @id
  name String 
  }

model User {
  id String @id @default(uuid())
  name String
  email String
  accountStatusId String
}

model AccountStatus {
  id String @id
  status String
}

model Task {
  id String @id
  title String
  instraction String
}

model TaskStatus {
  taskId String
  userId String
  statusId String

  @@id([taskId, userId, statusId])
}

model Team {
  teamId String @id
  name String
}

model UserTeamRelation {
  teamId String
  userId String

  @@id([teamId, userId])
}

model Pair {
  pairId String @id
  name String
}

model UserPairRelation {
  pairId String
  userId String

  @@id([pairId, userId])
}

